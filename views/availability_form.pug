extends layout

block content
  h1 #{title}

  form(method='GET' action='/calendar/showAvailability')
    div.form-group
      label(for='name') Tutor First Name
      input(type='text' placeholder='Maya' name='name' required)
    div.form-group
      label(for="committal") Committal Calendar
      input(type="radio" id="committal" name="caltype" value="committal")
      br
      label(for="current") Current Calendar
      input(id="current" name="caltype" value="current" type="radio")
    button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg